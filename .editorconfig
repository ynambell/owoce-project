[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
# end_of_line rule might not work in some IDEs, set manually
end_of_line = lf
indent_style = space
indent_size = 4

[{*.yml,*.sass,*.py,package.json}]
indent_size = 2

[Makefile]
indent_style = tab

